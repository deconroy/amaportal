        <template><![CDATA[<div class="modal-header">
  <h3 class="modal-title" id="modal-title">Ask a new question</h3>
</div>
<div class="modal-body" id="modal-body">
    <div class="form-group-lg">
      <textarea type="text" 
                class="form-control" 
                placeholder="Enter your question here."
                ng-model="m.question"></textarea>
    </div>
</div>
<div class="modal-footer">
  <button class="btn btn-primary btn-lg" type="button" ng-click="m.ok()" ng-disabled="m.submitting">
    <span ng-show="!m.submitting">Submit</span>
    <span ng-show="m.submitting">Posting Question...&nbsp;<i class="fa fa-spin fa-spinner"></i></span>
  </button>
  <button class="btn btn-warning btn-lg" type="button" ng-click="m.cancel()" ng-hide="m.submitting">Cancel</button>
</div>]]></template>
